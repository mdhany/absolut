<h1>Consumidores</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fecha de Nacimiento</th>
      <th>Cuidad</th>
      <th>MÃ³vil</th>
      <th>Email</th>
      <th>Intereses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.birth %></td>
        <td><%= customer.city %></td>
        <td><%= customer.mobile %></td>
        <td><%= customer.email %></td>
        <td><%= customer.interest %></td>
        <td><%= link_to 'Ver', customer %></td>
        <td><%= link_to 'Editar', edit_customer_path(customer) %></td>
        <td><%= link_to 'Eliminar', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
