<h1>Usuarios Recolectores</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Evento Actual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collectors.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.event.name %></td>
        <td><%= link_to 'Ver', gift %></td>
        <td><%= link_to 'Editar', edit_collector_registration_path %></td>
        <td><%= link_to 'Eliminar', gift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
